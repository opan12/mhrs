@model WebApplication7.WebApi.ViewModels.AuthLoginViewModel
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Login Sayfası</title>
    <style>
        .background-image {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('https://gunceloku.com/uploads/doktorlar-dizisi-cekildigi-hastanenin-adi-nedir-63c2f180f378a.png'); /* Arka plan görselini buraya yerleştirin */
            background-size: cover;
            background-position: center;
            opacity: 0.6;
            z-index: -1;
        }

        .container {
            position: relative;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <audio autoplay loop>
        <source src="https://youtu.be/YCZ67fqHNa4?si=JFdxfo7rCjSeziYX" type="audio/mpeg">
        Tarayıcınız audio elementini desteklemiyor.
    </audio>
    <div class="background-image"></div> <!-- Arka plan görseli -->
    <div class="container">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h2>Giriş Yap</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Login" asp-controller="User" method="post">
                        <div class="form-group mb-3">
                            <label for="TC">TC Kimlik No:</label>
                            <input type="text" class="form-control" name="TC" placeholder="TC Kimlik Numaranızı giriniz" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="Parola">Parola:</label>
                            <input type="password" class="form-control" name="Parola" placeholder="Parolanızı giriniz" required>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Giriş Yap</button>
                        </div>
                    </form>
                    <div class="text-center mt-3">
                        <a href="~/Hasta/Create" class="btn btn-secondary">Kayıt Ol</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
